<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout_01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/Lineaer_01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/hello_world"
            android:textColor="#6C3365"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineaer_02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:orientation="vertical"
        android:paddingLeft="10dp" >

        <TextView
            android:id="@+id/cityNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!-- 溫度 -->

        <TextView
            android:id="@+id/currentTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温度"
            android:textColor="#6C3365"
            android:textSize="40sp" />

        <!-- 天气状况 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="天气状况"
                android:textColor="#6C3365"
                android:textSize="15sp" />
            <!-- 天气图片 -->

            <ImageView
                android:id="@+id/wetherimg_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:contentDescription="null"
                android:paddingLeft="5dp" />
        </LinearLayout>

        <!-- 风向 -->

        <TextView
            android:id="@+id/WD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风向风力"
            android:textColor="#6C3365"
            android:textSize="15sp" />
        <!-- 湿度 -->

        <TextView
            android:id="@+id/SD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="湿度"
            android:textColor="#6C3365"
            android:textSize="15sp" />

        <!-- 发布时间 -->

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布时间"
            android:textColor="#6C3365"
            android:textSize="15sp" />
        <!-- 城市ID -->

        <TextView
            android:id="@+id/cityid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingRight="5dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/first_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="周一"
                android:textColor="#6C3365" />

            <ImageView
                android:id="@+id/imageView_n_00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/d00" />

            <TextView
                android:id="@+id/text_fc_00_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="白天:10°"
                android:textColor="#6C3365" />

            <TextView
                android:id="@+id/text_fc_00_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="晚上:10°"
                android:textColor="#6C3365" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/second_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="周二"
                android:textColor="#6C3365" />

            <ImageView
                android:id="@+id/imageView_n_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/d00" />

            <TextView
                android:id="@+id/text_fc_01_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="白天:10°"
                android:textColor="#6C3365" />

            <TextView
                android:id="@+id/text_fc_01_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="晚上:10°"
                android:textColor="#6C3365" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/third_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="周三"
                android:textColor="#6C3365" />

            <ImageView
                android:id="@+id/imageView_n_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/d00" />

            <TextView
                android:id="@+id/text_fc_02_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="白天:10°"
                android:textColor="#6C3365" />

            <TextView
                android:id="@+id/text_fc_02_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="晚上:10°"
                android:textColor="#6C3365" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/Info_index_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="指数级别"
            android:textColor="#6C3365" />

        <TextView
            android:id="@+id/Info_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天气指数"
            android:textColor="#6C3365" />
    </LinearLayout>

</LinearLayout>